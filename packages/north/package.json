{
  "name": "@outfitter/north",
  "version": "0.1.0",
  "description": "Design system enforcement CLI tool",
  "type": "module",
  "bin": {
    "north": "./dist/cli.js",
    "north-mcp": "./dist/mcp.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "bun build src/cli/index.ts --outdir dist --target node --format esm --entry-naming=cli.js --external @ast-grep/napi --external better-sqlite3 && bun build src/mcp/index.ts --outdir dist --target node --format esm --entry-naming=mcp.js --external @ast-grep/napi --external better-sqlite3 --external @modelcontextprotocol/sdk && bun build src/index.ts --outdir dist --target node --format esm --dts --external @ast-grep/napi --external better-sqlite3",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "@ast-grep/napi": "^0.40.5",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "minimatch": "^10.1.1",
    "ora": "^8.1.1",
    "yaml": "^2.6.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5"
  },
  "keywords": ["design-system", "linter", "cli", "shadcn", "enforcement"],
  "author": "Matt Galligan",
  "license": "MIT"
}
